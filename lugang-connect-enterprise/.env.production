# 鲁港通企业版生产环境配置
# 请根据您的堡塔面板实际情况修改以下配置

# 数据库配置 (MySQL 5.6兼容)
SQL_DSN=root:您的MySQL密码@tcp(localhost:3306)/lugang_enterprise?charset=utf8mb4&parseTime=True&loc=Local

# Redis配置 (可选，如果堡塔面板有Redis)
REDIS_CONN_STRING=localhost:6379

# 服务端口 (建议使用3000，避免与其他服务冲突)
PORT=3000

# 会话密钥 (请修改为随机字符串)
SESSION_SECRET=lugang_enterprise_production_secret_2024_very_secure_key

# AI模型API密钥 (必须配置)
DEEPSEEK_API_KEY=sk-your-deepseek-api-key-here
QWEN_API_KEY=sk-your-qwen-api-key-here

# 系统配置
THEME=lugang
MEMORY_CACHE_ENABLED=true
SYNC_FREQUENCY=300
GIN_MODE=release

# 鲁港通专用配置
LUGANG_KNOWLEDGE_BASE_ENABLED=true
LUGANG_DEMO_MODE=false
LUGANG_ENTERPRISE_MODE=true

# 数据库配置优化 (MySQL 5.6兼容)
DB_MAX_IDLE_CONNS=10
DB_MAX_OPEN_CONNS=100
DB_CONN_MAX_LIFETIME=3600

# 安全配置
TRUSTED_PROXIES=127.0.0.1,::1

# 时区
TZ=Asia/Shanghai

# 日志配置
LOG_LEVEL=info
LOG_FILE=/www/wwwroot/lugang-enterprise/logs/app.log