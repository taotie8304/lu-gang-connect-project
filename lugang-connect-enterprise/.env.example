# ============================================
# 鲁港通企业版 - 环境配置示例
# Lu-Gang Connect Enterprise Edition
# ============================================

# 【重要】数据库配置
# 格式: 用户名:密码@tcp(主机:端口)/数据库名?参数
SQL_DSN=username:password@tcp(localhost:3306)/lugang_connect?charset=utf8&parseTime=True&loc=Local

# 服务端口
PORT=8080

# 会话密钥（生产环境请修改为随机字符串）
SESSION_SECRET=change_me_to_random_string

# 系统配置
THEME=berry
MEMORY_CACHE_ENABLED=true
SYNC_FREQUENCY=300
GIN_MODE=release

# 鲁港通专用配置
LUGANG_KNOWLEDGE_BASE_ENABLED=true
LUGANG_DEMO_MODE=false
LUGANG_ENTERPRISE_MODE=true

# 数据库连接池配置
SQL_MAX_IDLE_CONNS=10
SQL_MAX_OPEN_CONNS=100
SQL_MAX_LIFETIME=3600

# 安全配置
TRUSTED_PROXIES=127.0.0.1,::1

# 时区
TZ=Asia/Shanghai

# 日志配置
LOG_LEVEL=info

# 品牌化配置（前端构建时使用）
# REACT_APP_HERO_BG_IMAGE=https://your-domain.com/your-background.jpg
