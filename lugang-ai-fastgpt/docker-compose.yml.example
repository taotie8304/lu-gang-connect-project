version: '3.8'

# 鲁港通AI - FastGPT定制版部署配置模板
# 基于FastGPT 4.14.4
# 复制此文件为 docker-compose.yml 并修改密码

services:
  # ===== MongoDB数据库 =====
  mongo:
    image: mongo:5.0.18
    container_name: lugang-ai-mongo
    restart: always
    ports:
      - "27017:27017"  # ⚠️ 如有端口冲突，修改为 "27018:27017"
    environment:
      MONGO_INITDB_ROOT_USERNAME: root
      MONGO_INITDB_ROOT_PASSWORD: YOUR_MONGO_PASSWORD  # ⚠️ 修改密码，与.env.local保持一致
    volumes:
      - ./data/mongo:/data/db
    networks:
      - lugang-ai-network

  # ===== PostgreSQL向量数据库 =====
  pg:
    image: pgvector/pgvector:pg15
    container_name: lugang-ai-pg
    restart: always
    ports:
      - "5432:5432"  # ⚠️ 如有端口冲突，修改为 "5433:5432"
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: YOUR_PG_PASSWORD  # ⚠️ 修改密码，与.env.local保持一致
      POSTGRES_DB: postgres
    volumes:
      - ./data/pg:/var/lib/postgresql/data
    networks:
      - lugang-ai-network

  # ===== Redis缓存 =====
  redis:
    image: redis:7.2-alpine
    container_name: lugang-ai-redis
    restart: always
    ports:
      - "6380:6379"  # 已改为6380避免与宝塔Redis冲突
    volumes:
      - ./data/redis:/data
    networks:
      - lugang-ai-network

  # ===== 鲁港通AI主应用 =====
  lugang-ai:
    image: lugang-ai:v1
    container_name: lugang-ai-app
    restart: always
    ports:
      - "3210:3000"  # ⚠️ 如有端口冲突，修改为 "3211:3000"
    depends_on:
      - mongo
      - pg
      - redis
    env_file:
      - ./projects/app/.env.local
    networks:
      - lugang-ai-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:3000/api/health"]
      interval: 30s
      timeout: 10s
      retries: 3

networks:
  lugang-ai-network:
    driver: bridge

volumes:
  mongo-data:
  pg-data:
  redis-data:
